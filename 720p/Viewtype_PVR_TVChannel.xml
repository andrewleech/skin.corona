<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_PVR_TVChannel">
		<!-- TV Channel view -->
		<control type="group">
			<description>TV Channels group</description>
			<visible>Control.IsVisible(11)</visible>
			<!-- TV Channels list -->
			<control type="group">
				<posx>595</posx>
				<posy>50</posy>
  				<control type="list" id="11">
	  				<posx>0</posx>
  					<posy>0</posy>
  					<width>640</width>
  					<height>450</height>
  					<!-- <onleft>32</onleft>
	  				<onright>70</onright> -->
			        <onright>select</onright>
			        <onleft>Kodi.Action(ParentDir)</onleft>
					<pagecontrol>70</pagecontrol>
					<scrolltime>200</scrolltime>
					<itemlayout height="60" width="700">
						<control type="label">	
							<description>Channel number label</description>
							<posx>15</posx>
							<posy>0</posy>
							<width>40</width>
							<height>35</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>METF_PVRChannelList</font>
							<info>ListItem.ChannelNumber</info>
						</control>
						<control type="label">
							<description>Channel name label</description>
							<posx>60</posx>
							<posy>4</posy>
							<width>500</width>
							<height>25</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>METF_PVRChannelList</font>
							<info>ListItem.Label</info>
						</control>
						<control type="label">
							<description>Channel title label</description>
							<posx>60</posx>
							<posy>29</posy>
							<width>500</width>
							<height>20</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>METF_PVRChannelList</font>
							<info>ListItem.Title</info>
						</control>
						<control type="image">
							<description>Channel icon</description>
							<posx>570</posx>
							<posy>8</posy>
							<width>50</width>
							<height>50</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="progress">
							<description>Channel progressbar</description>
							<posx>60</posx>
							<posy>52</posy>
							<width>510</width>
							<height>6</height>
							<colordiffuse>88FFFFFF</colordiffuse>
							<info>ListItem.Progress</info>
						</control>
					</itemlayout>
					<focusedlayout height="60" width="700">
						<control type="image">
							<description>Channel focus selection</description>
							<posx>0</posx>
							<posy>4</posy>
							<width>635</width>
							<height>62</height>
							<texture>FocusLine.png</texture>
							<colordiffuse>FocusBar</colordiffuse>
						</control>
						<control type="label">
							<description>Channel number label</description>
							<posx>15</posx>
							<posy>0</posy>
							<width>40</width>
							<height>35</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>METF_PVRChannelList</font>
							<info>ListItem.ChannelNumber</info>
						</control>
						<control type="label">
							<description>Channel name label</description>
							<posx>60</posx>
							<posy>4</posy>
							<width>500</width>
							<height>25</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>METF_PVRChannelList</font>
							<info>ListItem.Label</info>
						</control>
						<control type="label">
		 					<description>Channel title label</description>
							<posx>60</posx>
							<posy>29</posy>
							<width>500</width>
							<height>20</height>
							<align>left</align>
							<aligny>center</aligny>
							<font>METF_PVRChannelList</font>
							<info>ListItem.Title</info>
						</control>
						<control type="image">
							<description>Channel icon</description>
							<posx>570</posx>
	 						<posy>8</posy>
							<width>50</width>
							<height>50</height>
							<texture>$INFO[ListItem.Icon]</texture>
						</control>
						<control type="progress">
							<description>Channel progressbar</description>
							<posx>60</posx>
							<posy>52</posy>
							<width>510</width>
							<height>6</height>
							<colordiffuse>88FFFFFF</colordiffuse>
							<info>ListItem.Progress</info>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="70">
					<description>Channel scrollbar</description>
					<posx>445</posx>
					<posy>0</posy>
					<width>25</width>
					<height>500</height>
					<texturesliderbackground>-</texturesliderbackground>
					<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
					<onleft>11</onleft>
 					<onright>32</onright>
					<showonepage>false</showonepage>
					<orientation>vertical</orientation>
				</control>
			</control>
      
 			<!-- TV Channel Display and Information (Left) -->
			<control type="group">
				<description>TV Channel information</description>
				<posx>25</posx>
				<posy>40</posy>
				<control type="image">
					<description>PVR Display Picture</description>
					<posx>22</posx>
					<posy>20</posy>
					<width>504</width>
					<height>296</height>
					<texture background="true" diffuse="maskfanart.png" fallback="home_art/livetv.jpg">$INFO[Skin.String(CustomLiveTV)]</texture>
					<aspectratio aligny="bottom">stretch</aspectratio>
					<visible>!Player.HasVideo</visible>
				</control>
				<control type="videowindow">
					<description>PVR Display Window</description>
					<posx>22</posx>
					<posy>20</posy>
					<width>504</width>
					<height>296</height>
					<aspectratio aligny="bottom">stretch</aspectratio>
					<texture background="true" diffuse="maskfanart.png"></texture>
					<visible>Player.HasVideo</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>546</width>
					<height>342</height>
					<texture>frames/ClassicFrame_Fanart.png</texture>
				</control>
				<control type="label">
					<description>Channel start time label</description>
					<posx>120</posx>
					<posy>334</posy>
					<width>120</width>
					<height>20</height>
					<align>right</align>
					<aligny>center</aligny>
					<include>LiveTVLabel</include>
					<info>ListItem.StartTime</info>
				</control>
				<control type="progress">
					<description>Channel progress bar</description>
					<posx>140</posx>
					<posy>342</posy>
					<width>270</width>
					<height>8</height>
					<info>Container(11).ListItem.Progress</info>
				</control>
				<control type="label">
					<description>Channel end time label</description>
					<posx>420</posx>
					<posy>334</posy>
					<width>120</width>
					<height>20</height>
					<align>left</align>
					<aligny>center</aligny>
					<include>LiveTVLabel</include>
					<info>ListItem.EndTime</info>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>368</posy>
					<width>546</width>
					<height>20</height>
					<align>center</align>
					<aligny>center</aligny>
					<include>LiveTVLabel</include>
					<label>$LOCALIZE[19031] : $INFO[ListItem.NextTitle]</label>
					<visible>!IsEmpty(ListItem.NextTitle)</visible>
				</control>

			</control>
			<!-- TV Channel Plot (Bottom) -->
			<include>LiveTVPlot</include>
		</control>
	</include>
</includes>
    
