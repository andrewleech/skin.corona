<includes>
	<include name="MediaInfo2">
		<!-- Additional Media Flags -->
		<control type="grouplist" id="9902">
			<posx>293</posx>
			<posy>651</posy>
			<width>765</width>
			<height>62</height>
			<align>left</align>
			<itemgap>8</itemgap>
			<orientation>horizontal</orientation>
			<include>Animation_FadedByMenu</include>
			<include>Animation_CommonFade</include>
			<visible>!SubString(Container.FolderPath,plugin)</visible>
			<visible>Container.Content(movies) | Container.Content(episodes) | Container.Content(MusicVideos) | Window.IsActive(fullscreeninfo) | Window.IsActive(115)</visible>
			<include>VisibleIfNotMovieSet</include>

			<!-- Video Source (not shown in fullscreen video info) -->
			<control type="group">
				<width>90</width>
				<height>62</height>
				<visible>Container.Content(movies) | Container.Content(episodes) | Container.Content(MusicVideos)</visible>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/sdtv.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,sdtv) | substring(listitem.filename,tvrip) | [[!substring(listitem.filename,hdtv) + !substring(listitem.filename,bluray) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,sddvd) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,brrip) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,pdtv) + !substring(listitem.filename,.evo,Right) + !substring(listitem.filename,.mt2s,Right) + !substring(listitem.filename,.ifo,Right) + !substring(listitem.filename,.vob,Right) + !substring(listitem.filename,r5) + !substring(listitem.filename,dvdscr) + !substring(listitem.filename,screener) + !substring(listitem.filename,web-dl) + !substring(listitem.filename,webrip) + !substring(listitem.filename,dvd)] + Container.Content(episodes) + [substring(listitem.VideoResolution,SD) | substring(listitem.VideoResolution,480) | substring(listitem.VideoResolution,540) | substring(listitem.VideoResolution,576)]]</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/hdtv.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,hdtv) | substring(listitem.filename,pdtv) | [[!substring(listitem.filename,sdtv) + !substring(listitem.filename,bluray) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,sddvd) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,brrip) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,tvrip) + !substring(listitem.filename,.evo,Right) + !substring(listitem.filename,.mt2s,Right) + !substring(listitem.filename,.ifo,Right) + !substring(listitem.filename,.vob,Right) + !substring(listitem.filename,r5) + !substring(listitem.filename,dvdscr) + !substring(listitem.filename,screener) + !substring(listitem.filename,web-dl) + !substring(listitem.filename,webrip) + !substring(listitem.filename,dvd)] + Container.Content(episodes) + [substring(listitem.VideoResolution,720) | substring(listitem.VideoResolution,1080)]]</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/webtv.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,web-dl) | substring(listitem.filename,webrip)</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/hddvd.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,hddvd) | substring(listitem.filename,hd-dvd) | substring(listitem.filename,.evo,Right)</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/bluray.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,bluray) | substring(listitem.filename,blu-ray) | substring(listitem.filename,brrip) | substring(listitem.filename,bdrip) | substring(listitem.filename,.mt2s,Right) | [[!substring(listitem.filename,sddvd) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,brrip) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,tvrip) + !substring(listitem.filename,pdtv) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,sdtv) + !substring(listitem.filename,hdtv) + !substring(listitem.filename,.evo,Right) + !substring(listitem.filename,.ifo,Right) + !substring(listitem.filename,.vob,Right) + !substring(listitem.filename,r5) + !substring(listitem.filename,dvdscr) + !substring(listitem.filename,screener) + !substring(listitem.filename,web-dl) + !substring(listitem.filename,webrip)] + [Container.Content(movies) | Container.Content(MusicVideos)] + [substring(ListItem.VideoResolution,720) | substring(ListItem.VideoResolution,1080)]]</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/dvd.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>[substring(listitem.filename,dvd) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,hd-dvd) + !substring(listitem.filename,bluray) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,brrip) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,r5) + !substring(listitem.filename,dvdscr) + !substring(listitem.filename,screener) + !substring(listitem.filename,web-dl) + !substring(listitem.filename,webrip)] | substring(listitem.filename,.ifo,Right) | substring(listitem.filename,.vob,Right) | [[!substring(listitem.filename,hddvd) + !substring(listitem.filename,bluray) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,brrip) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,sdtv) + !substring(listitem.filename,hdtv) + !substring(listitem.filename,.evo,Right) + !substring(listitem.filename,.m2ts,Right) + !substring(listitem.filename,r5) + !substring(listitem.filename,dvdscr) + !substring(listitem.filename,screener) + !substring(listitem.filename,web-dl) + !substring(listitem.filename,webrip)] + [Container.Content(movies) | Container.Content(MusicVideos)] + [substring(listitem.VideoResolution,SD) | substring(listitem.VideoResolution,480) | substring(listitem.VideoResolution,540) | substring(listitem.VideoResolution,576)]]</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/r5.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,r5)</visible>
				</control>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">flags/Source/screener.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<visible>substring(listitem.filename,dvdscr) | substring(listitem.filename,screener)</visible>
				</control>
				<control type="image">
					<width>104</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_frame.png</texture>
				</control>
			</control>

			<!-- Video Resolution -->
			<control type="group">
				<width>90</width>
				<height>62</height>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">$VAR[MediaFlag_VideoResolution]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<width>104</width>
					<height>54</height>
					<texture>flags/flag_frame.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>

			<!-- Video Aspect-->
			<control type="group">
				<width>90</width>
				<height>62</height>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/VideoAspect/default.png">$VAR[MediaFlag_VideoAspect]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<width>104</width>
					<height>54</height>
					<texture>flags/flag_frame.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>

			<!-- Video Codec -->
			<control type="group">
				<width>90</width>
				<height>62</height>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/default.png">$VAR[MediaFlag_VideoCodec]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<width>104</width>
					<height>54</height>
					<texture>flags/flag_frame.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>

			<!-- Audio Codec -->
			<control type="group">
				<width>90</width>
				<height>62</height>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/defaultsound.png">$VAR[MediaFlag_AudioCodec]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<width>104</width>
					<height>54</height>
					<texture>flags/flag_frame.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>

			<!-- Audio Channels -->
			<control type="group">
				<width>90</width>
				<height>62</height>
				<control type="image">
					<include>MediaFlagsVarsWide</include>
					<texture fallback="flags/AudioChannels/DefaultChannels.png">$VAR[MediaFlag_AudioChannels]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<width>104</width>
					<height>54</height>
					<texture>flags/flag_frame.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>

			<!-- Subtitles -->
			<control type="group">
				<width>58</width>
				<height>62</height>
				<visible>!IsEmpty(ListItem.SubtitleLanguage) | [IsEmpty(ListItem.SubtitleLanguage) + !IsEmpty(VideoPlayer.SubtitleLanguage)]</visible>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>flags/cc.png</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<posx>2</posx>
					<width>66</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_framesquare.png</texture>
				</control>
			</control>

			<!-- MPAA Flag (only shown in fullscreen video info) -->
			<!--
				XXX: this doesn't really belong with the other media flags.
				commenting out for now until people complain about it.
			<control type="group">
				<width>58</width>
				<height>62</height>
				<visible>IsEmpty(ListItem.mpaa) + !IsEmpty(VideoPlayer.mpaa)</visible>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>$VAR[MediaFlag_MPAA]</texture>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
				</control>
				<control type="image">
					<posx>2</posx>
					<width>66</width>
					<height>54</height>
					<texture>flags/flag_framesquare.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
			-->

			<!-- Star Rating (only shown in fullscreen video info) -->
			<!--
				XXX: this doesn't really belong with the other media flags.
				commenting out for now until people complain about it.
			<control type="group">
				<width>58</width>
				<height>62</height>
				<visible>IsEmpty(ListItem.Rating) + !IsEmpty(VideoPlayer.Rating)</visible>
				<control type="image">
					<include>MediaFlagsVarsSquare</include>
					<texture>Star.png</texture>
					<colordiffuse>RatingStarDiffuse</colordiffuse>
				</control>
				<control type="label">
					<include>MediaFlagsVarsSquare</include>
					<align>center</align>
					<aligny>center</aligny>
					<label fallback="NA">$INFO[VideoPlayer.Rating]</label>
					<textcolor>MediaFlagDiffuse</textcolor>
					<font>METF_StarRating</font>
				</control>
				<control type="image">
					<posx>2</posx>
					<width>66</width>
					<height>54</height>
					<texture>flags/flag_framesquare.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
			-->
		</control>
	</include>
</includes>
