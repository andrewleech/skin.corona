<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home3 Icons -->
	<visible>Skin.HasSetting(Home3)</visible>

	<include name="Submenu_Button3">
		<width>220</width>
		<height>20</height>
		<align>center</align>
		<font>METF_HomeMenuSmall</font>
		<textcolor>SubmenuText</textcolor>
		<focusedcolor>SubmenuTextFocused</focusedcolor>
		<animation type="Focus" reversible="false">
			<effect type="zoom" center="auto" start="100" end="110" time="100" tween="cubic" easing="inout" />
		</animation>
	</include>
	<include name="HomeStatsPosition3">
		<posx>26</posx>
		<posy>560</posy>
		<width>220</width>
		<height>416</height>
	</include>
	<include name="Submenu_VerticalDetails3">
		<width>220</width>
		<height>160</height>
		<orientation>vertical</orientation>
		<itemgap>0</itemgap>
		<onleft>9000</onleft>
		<onright>9000</onright>
	</include>
	<include name="HomeStatsDetails3">
		<width>120</width>
		<height>24</height>
		<align>left</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsCategory</textcolor>
	</include>
	<include name="HomeStatsDetailsNumber3">
		<width>60</width>
		<height>24</height>
		<align>right</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsNumber</textcolor>
	</include>

	<include name="Home3_Wide">
		<control type="button" id="9002">
			<description>Hidden Button to pass through navigation when recently added is disabled</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label>-</label>
			<font>-</font>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9001</ondown>
			<visible>false</visible>
		</control>
		<control type="button" id="99991">
			<description>Hidden Button to pass through navigation to hide submenus</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label>-</label>
			<font>-</font>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9001</ondown>
			<visible>false</visible>
		</control>

		<!-- XBMC Logo and Skin Name -->
		<control type="group">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<control type="image">
				<posx>20</posx>
				<posy>25</posy>
				<width>240</width>
				<height>54</height>
				<aspectratio aligny="bottom">keep</aspectratio>
				<colordiffuse>XBMCLogoDiffuse</colordiffuse>
				<texture>xbmc-logo2.png</texture>
			</control>
			<control type="label">
				<posx>20</posx>
				<posy>77</posy>
				<width>274</width>
				<height>30</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>METF_Heading</font>
				<textcolor>Home2SkinName</textcolor>
				<label>$LOCALIZE[31011]</label>
			</control>
		</control>
		<!-- Main menu background -->
		<control type="multiimage">
			<include>Dimensions_Fullscreen</include>
			<timeperimage>15000</timeperimage>
			<randomize>true</randomize>
			<fadetime>500</fadetime>
			<imagepath background="true"  diffuse="diffuse_fanart.png">$INFO[Container(9000).ListItem.Icon]</imagepath>
			<animation reversible="false" effect="zoom" center="auto" start="100" end="112" time="200" tween="sine" easing="inout">focus</animation>
			<animation reversible="false" effect="zoom" center="auto" start="112" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
		</control>
		<!-- Sub-menus and upper-menus -->
		<include>HomeDeck</include>
		<control type="image">
			<posx>-20</posx>
			<posy>450</posy>
			<width>1320</width>
			<height>63</height>
			<texture>ButtonFo.png</texture>
			<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
		</control>
		<control type="image">
			<posx>-70</posx>
			<posy>450</posy>
			<width>1420</width>
			<height>63</height>
			<texture flipy="true">osd\OSDdialogback.png</texture>
		</control>
		<!-- Main Menu -->
		<control type="wraplist" id="9000">
			<posx>0</posx>
			<posy>450</posy>
			<height>450</height>
			<width>1280</width>
			<onup>9002</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<viewtype>list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>2</focusposition>
			<scrolltime>200</scrolltime>
			<!-- Setting preloaditems to anything greater than zero currently causes -->
			<!-- flickering/slowdown if any home items are hidden.  -->
			<!-- See http://trac.xbmc.org/ticket/12145 and https://github.com/stoli/Metropolis/issues/21 -->
			<!--<preloaditems>2</preloaditems>-->
			<preloaditems>0</preloaditems>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<itemlayout width="300" height="60">
				<control type="image">
					<posx>-110</posx>
					<posy>5</posy>
					<width>1</width>
					<height>50</height>
					<texture>FocusLine.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
				</control>
				<control type="image">
					<posx>189</posx>
					<posy>5</posy>
					<width>1</width>
					<height>50</height>
					<texture>FocusLine.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
				</control>
				<control type="label">
					<posx>40</posx>
					<posy>0</posy>
					<width>290</width>
					<height>60</height>
					<font>METF_HorizMenu</font>
					<textcolor>FrameBackgroundDiffuse</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout height="60" width="300">
				<control type="image">
					<posx>-110</posx>
					<posy>5</posy>
					<width>1</width>
					<height>50</height>
					<texture>FocusLine.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
				</control>
				<control type="image">
					<posx>189</posx>
					<posy>5</posy>
					<width>1</width>
					<height>50</height>
					<texture>FocusLine.png</texture>
					<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
				</control>
				<control type="label">
					<posx>40</posx>
					<posy>0</posy>
					<width>290</width>
					<height>60</height>
					<font>METF_HorizMenu</font>
					<textcolor>HelpArrowDiffuse</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
				<control type="label">
					<posx>40</posx>
					<posy>0</posy>
					<width>290</width>
					<height>60</height>
					<font>METF_HorizMenu</font>
					<textcolor>HelpArrowDiffuse</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<visible>Control.HasFocus(9000)</visible>
				</control>
			</focusedlayout>

			<!-- Main menu shared content list -->
			<include>HomeListContent</include>
		</control>

		<!-- Help Arrow when submenu present -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>!ControlGroup(9001).HasFocus() + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)] + [[Container(9000).HasFocus(11) + !Skin.HasSetting(NoProgramsSubs)] | [Container(9000).HasFocus(4) + [!Skin.HasSetting(NoVideoSubs) | Skin.HasSetting(HomeVideos_Shortcuts)]] | [Container(9000).HasFocus(7) + [!Skin.HasSetting(NoMusicSubs) | Skin.HasSetting(HomeMusic_Shortcuts)]] | [Container(9000).HasFocus(2) + [!Skin.HasSetting(NoMoviesSubs) | Skin.HasSetting(HomeMovies_Shortcuts)]] | [Container(9000).HasFocus(3) + [!Skin.HasSetting(NoTVShowsSubs) | Skin.HasSetting(HomeTVShows_Shortcuts)]] | [Container(9000).HasFocus(9) + [[Skin.HasSetting(HomePictures_Override) | Skin.HasSetting(HomePictures_Shortcuts)] | !Skin.HasSetting(NoPicturesSubs)]] | [Container(9000).HasFocus(12) + [Skin.HasSetting(Home1) | ![Skin.HasSetting(HomeForecast) | Skin.HasSetting(NoWeatherSubs)]]] | [Container(9000).HasFocus(14) + ![Skin.HasSetting(NoSettingsSubs) | Skin.HasSetting(NoSettings)]] | [Container(9000).HasFocus(13) + Skin.HasSetting(HomeFavourites_Shortcuts) + !Skin.HasSetting(NoFavouritesSubs)] | [Container(9000).HasFocus(16) + !Skin.HasSetting(NoShutdownSubs)] | [Container(9000).HasFocus(6) + !Skin.HasSetting(NoLiveTVSubs)] | [Container(9000).HasFocus(8) + !Skin.HasSetting(NoMusicVideosSubs)] | [Container(9000).HasFocus(10) + Skin.HasSetting(HomeGames_Shortcuts) + !Skin.HasSetting(NoGamesSubs)]]</visible>
			<control type="image">
				<posx>625</posx>
				<posy>508</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowDown.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
		</control>

		<!-- Submenus -->
		<control type="group" id="9001">
			<posx>530</posx>
			<posy>556</posy>
			<animation effect="fade" start="0" end="100" time="200">Visible</animation>
			<animation effect="fade" start="100" end="0" time="200">Hidden</animation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)]</visible>
			<!-- Play Disc Submenu -->
			<control type="grouplist" id="9019">
				<include>Submenu_VerticalDetails3</include>
				<onup>9019</onup>
				<ondown>9019</ondown>
				<visible>Container(9000).HasFocus(9)</visible>
				<control type="button" id="91901">
					<include>Submenu_Button3</include>
					<label>$LOCALIZE[13391]</label>
					<onclick>SetFocus(9000)</onclick>
					<onclick>EjectTray()</onclick>
					<visible>System.HasMediaDVD</visible>
				</control>
			</control>

			<!-- Sub-menu shared content list -->
			<include>HomeListSubMenu</include>
		</control>

		<!-- Shared Home Stats/Media Totals -->
		<include>HomeStats</include>
	</include>
</includes>
