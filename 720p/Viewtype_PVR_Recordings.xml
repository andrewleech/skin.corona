<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_PVR_Recordings">
		<control type="group">
			<description>Recordings group</description>
			<visible>Control.IsVisible(13)</visible>

			<control type="panel" id="13">
				<posx>40</posx>
				<posy>50</posy>
				<width>1200</width>
				<height>434</height>
				<!-- <onleft>34</onleft>
				<onright>72</onright> -->
		        <onright>select</onright>
		        <onleft>XBMC.Action(ParentDir)</onleft>
				<!-- <onup>13</onup>
				<ondown>13</ondown> -->
				<pagecontrol>72</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40" width="1200">
					<control type="image">
						<description>Recording icon</description>
						<posx>10</posx>
						<posy>5</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>50</posx>
						<posy>0</posy>
						<width>1010</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>1180</posx>
						<posy>0</posy>
						<width>700</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="1200">
					<control type="image">
						<description>Focus selection</description>
						<width>1210</width>
						<height>40</height>
						<texture>ButtonFo.png</texture>
					</control>
					<control type="image">
						<description>Recording icon</description>
						<posx>10</posx>
						<posy>5</posy>
						<width>30</width>
						<height>30</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<description>Recording label</description>
						<posx>50</posx>
						<posy>0</posy>
						<width>1010</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<description>Recording date label</description>
						<posx>1180</posx>
						<posy>0</posy>
						<width>500</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<include>LiveTVLabel</include>
						<info>ListItem.Date</info>
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="72">
				<posx>1210</posx>
				<posy>80</posy>
				<width>25</width>
				<height>460</height>
 				<texturesliderbackground>-</texturesliderbackground>
 				<textureslidernibfocus>ScrollBarV_Nib_Focus.png</textureslidernibfocus>
				<onleft>13</onleft>
				<onright>34</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<!-- TV Channel Plot (Bottom) -->
			<include>LiveTVPlot</include>
		</control>
	</include>
</includes>
