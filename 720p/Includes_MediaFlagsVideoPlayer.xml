<includes>
	<include name="MediaInfoVideoPlayer">
		<control type="group">
			<posx>3</posx>
			<posy>5</posy>
			<include>Animation_FadedByMenu</include>
			<include>Animation_CommonFade</include>
			<include>Animation_OpenCloseFade</include>
			<visible>[Window.IsActive(fullscreeninfo) + !SubString(Container.FolderPath,plugin)] | [Window.IsActive(115) + !SubString(Container.FolderPath,plugin)]</visible>
			<!-- MPAA Flags -->
			<control type="group">
				<posx>300</posx>
				<posy>650</posy>
				<control type="image">
					<include>MediaFlagsVarsMPAA</include>
					<texture>$VAR[Flag_MPAA]</texture>
				</control>
				<control type="image">
					<posx>-10</posx>
					<posy>-4</posy>
					<width>66</width>
					<height>58</height>
					<texture>flags/flag_framesquare.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
			<!-- Rating Stars -->
			<control type="group">
				<posx>362</posx>
				<posy>650</posy>
				<control type="image">
					<posx>2</posx>
					<posy>4</posy>
					<width>42</width>
					<height>42</height>
					<texture>Star.png</texture>
					<colordiffuse>RatingStarDiffuse</colordiffuse>
				</control>
				<control type="label">
					<posx>-2</posx>
					<posy>0</posy>
					<width>50</width>
					<height>50</height>
					<align>center</align>
					<aligny>center</aligny>
					<label fallback="NA">$INFO[VideoPlayer.Rating]</label>
					<textcolor>MediaFlagDiffuse</textcolor>
					<font>METF_StarRating</font>
				</control>
				<control type="image">
					<posx>-10</posx>
					<posy>-4</posy>
					<width>66</width>
					<height>58</height>
					<texture>flags/flag_framesquare.png</texture>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
				</control>
			</control>
		</control>

		<control type="group">
			<posx>167</posx>
			<posy>3</posy>
			<include>Animation_FadedByMenu</include>
			<include>Animation_CommonFade</include>
			<include>Animation_OpenCloseFade</include>
			<visible>[Window.IsActive(fullscreeninfo) + !SubString(Container.FolderPath,plugin)] | [Window.IsActive(115) + !SubString(Container.FolderPath,plugin)]</visible>
			<!-- Video Resolution -->
			<control type="group">
				<posx>240</posx>
				<posy>640</posy>
				<control type="image">
					<posx>22</posx>
					<posy>16</posy>
					<width>80</width>
					<height>40</height>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<texture fallback="flags/default.png">$INFO[VideoPlayer.VideoResolution,flags/VideoResolution/,.png]</texture>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>8</posy>
					<width>104</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_frame.png</texture>
				</control>
			</control>
			<!-- Video Aspect-->
			<control type="group">
				<posx>335</posx>
				<posy>640</posy>
				<control type="image">
					<posx>22</posx>
					<posy>16</posy>
					<width>80</width>
					<height>40</height>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<texture fallback="flags/VideoAspect/default.png">$INFO[VideoPlayer.VideoAspect,flags/VideoAspect/,.png]</texture>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>8</posy>
					<width>104</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_frame.png</texture>
				</control>
			</control>
			<!-- Video Codec -->
			<control type="group">
				<posx>430</posx>
				<posy>640</posy>
				<control type="image">
					<posx>21</posx>
					<posy>16</posy>
					<width>80</width>
					<height>40</height>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<texture fallback="flags/default.png">$INFO[VideoPlayer.VideoCodec,flags/VideoCodec/,.png]</texture>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>8</posy>
					<width>104</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_frame.png</texture>
				</control>
			</control>
			<!-- Audio Codec -->
			<control type="group">
				<posx>525</posx>
				<posy>640</posy>
				<control type="image">
					<posx>21</posx>
					<posy>16</posy>
					<width>80</width>
					<height>40</height>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<texture fallback="flags/defaultsound.png">$INFO[VideoPlayer.AudioCodec,flags/AudioCodec/,.png]</texture>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>8</posy>
					<width>104</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_frame.png</texture>
				</control>
			</control>
			<!-- Audio Channels -->
			<control type="group">
				<posx>620</posx>
				<posy>640</posy>
				<control type="image">
					<posx>20</posx>
					<posy>16</posy>
					<width>80</width>
					<height>40</height>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<texture fallback="flags/AudioChannels/DefaultChannels.png">$INFO[VideoPlayer.AudioChannels,flags/AudioChannels/,ch.png]</texture>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>8</posy>
					<width>104</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_frame.png</texture>
				</control>
			</control>
			<!-- Subtitles -->
			<control type="group">
				<posx>728</posx>
				<posy>645</posy>
				<control type="image">
					<posx>5</posx>
					<posy>8</posy>
					<width>45</width>
					<height>45</height>
					<colordiffuse>MediaFlagDiffuse</colordiffuse>
					<texture>flags/cc.png</texture>
					<visible>!IsEmpty(VideoPlayer.SubtitleLanguage)</visible>
				</control>
				<control type="image">
					<posx>-2</posx>
					<posy>3</posy>
					<width>58</width>
					<height>54</height>
					<colordiffuse>MediaFlagBoxDiffuse</colordiffuse>
					<texture>flags/flag_framesquare.png</texture>
					<visible>!IsEmpty(VideoPlayer.SubtitleLanguage)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>
